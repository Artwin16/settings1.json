{//ОБЯЗАТЕЛЬНЫЕ НАСТРОЙКИ
	"editor.formatOnPaste": true,
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"prettier.useTabs": true,
	"prettier.semi": false,
	"prettier.jsxSingleQuote": true,
	"prettier.singleQuote": true,
	"prettier.arrowParens": "avoid",
	"editor.formatOnSave": true,
	"breadcrumbs.icons": false,
	"breadcrumbs.showKeys": false,
	"breadcrumbs.showFiles": false,
	"breadcrumbs.symbolPath": "off",
	"breadcrumbs.showArrays": false,
	"breadcrumbs.showBooleans": false,
	"breadcrumbs.showClasses": false,
	"breadcrumbs.showConstants": false,
	"breadcrumbs.showConstructors": false,
	"breadcrumbs.showEnumMembers": false,
	"breadcrumbs.showEvents": false,
	"breadcrumbs.showFields": false,
	"breadcrumbs.showEnums": false,
	"breadcrumbs.showFunctions": false,
	"breadcrumbs.showInterfaces": false,
	"breadcrumbs.showMethods": false,
	"breadcrumbs.showModules": false,
	"breadcrumbs.showNamespaces": false,
	"breadcrumbs.showNull": false,
	"breadcrumbs.showNumbers": false,
	"breadcrumbs.showObjects": false,
	"breadcrumbs.showOperators": false,
	"breadcrumbs.showPackages": false,
	"breadcrumbs.showProperties": false,
	"breadcrumbs.showStrings": false,
	"breadcrumbs.showStructs": false,
	"breadcrumbs.showTypeParameters": false,
	"breadcrumbs.showVariables": false,
	"editor.wordWrap": "on",
	"editor.unicodeHighlight.ambiguousCharacters": false,
	"explorer.confirmDelete": false,
	"explorer.confirmDragAndDrop": false,
	"editor.formatOnSave": true,
	"editor.smoothScrolling": true,
	"workbench.list.smoothScrolling": true,
	"terminal.integrated.smoothScrolling": true,
	"terminal.integrated.cursorBlinking": true,
	"editor.glyphMargin": false,
	"editor.linkedEditing": true,
	"emmet.includeLanguages": {
		"javascript": "javascriptreact",
		"typescript": "typescriptreact"
	},
	"editor.renderWhitespace": "all",
	"security.workspace.trust.banner": "never",


	///////////ДЕТАЛЬНЫЕ НАСТРОЙКИ С ПОДПИСЯМИ

    "workbench.colorTheme": "Material Theme", //ТЕМА
	"files.autoSave": "afterDelay", //АВТОСОХРАНЕНИЕ
	"workbench.iconTheme": "material-icon-theme" //ИКОНКИ
	"workbench.startupEditor": "none", //ОТКЛЮЧЕНИЕ ПРИВЕТСТВЕННОГО ЭКРАНА
	"workbench.tips.enabled": false, //ОТКЛЮЧЕНИЕ ПРИВЕТСТВЕННЫХ КЛАВИШ
	"workbench.colorCustomizations": {
		//КАСТОМИЗАЦИЯ ЦВЕТОВ
		"list.activeSelectionBackground": "#6b0e70",
		"list.inactiveSelectionBackground": "#6b0e70",
		"list.focusBackground": "#6b0e70",
		"list.hoverBackground": "#6b0e70",
		"terminalCursor.foreground": "#c45dff" //ЦВЕТ КУРСОРА В ТЕРМИНАЛЕ
	},
	"workbench.layoutControl.enabled": false, //СКРЫТИЕ ИКОНОК В ПРАВОМ ВЕРХНЕМ УГЛУ
	"editor.minimap.enabled": false, //СКРЫТИЕ МИНИКАРТЫ
	"editor.renderLineHighlight": "gutter", //УБИРАЕТ ПОДСВЕЧИВАНИЕ ЦЕЛОЙ СТРОКИ
	"editor.scrollbar.horizontal": "hidden", //СКРЫВАЕТ ГОРИЗОНТАЛЬНЫЙ СКРОЛБАР
	"editor.scrollbar.vertical": "hidden", //СКРЫВАЕТ ВЕРТИКАЛЬНЫЙ СКРОЛБАР
	"editor.overviewRulerBorder": false, //УБИРАЕТ РАМКУ В СКРОЛБАРЕ
	"editor.cursorSmoothCaretAnimation": "on", //ПЛАВНОЕ ПЕРЕМЕЩЕНИЕ КУРСОРА
	"editor.cursorBlinking": "expand", //АНИМАЦИЯ КУРСОРА
	"editor.cursorStyle": "line-thin", //ТОЛЩИНА КУРСОРА
	"editor.fontSize": 18, //РАЗМЕР ШРИФТА
	"editor.lineHeight": 1.6, //РАЗМЕР ВЫСОТЫ СТРОК
	"breadcrumbs.enabled": true, //УБИРАЕТ ИЛИ ДОБАЛЯЕТ ХЛЕБНЫЕ КРОШКИ
	"explorer.compactFolders": false, //ВСЕ ПАПКИ ОТОБРАЖАЮТСЯ В СТАНДАРТНОМ ВИДЕ,А НЕ ЧЕРЕЗ СЛЭШ
	"extensions.ignoreRecommendations": true, //ОТКЛЮЧАЕТ РЕКОМЕНДАЦИИ
	"terminal.integrated.lineHeight": 1.6, //ВЫСОТА СТРОК В ТЕРМИНАЛЕ
	"terminal.integrated.defaultProfile.windows": "Git Bash", //ИСПОЛЬЗУЕТСЯ ТЕРМИНАЛ GIT BASH
	"terminal.integrated.fontSize": 16, //РАЗМЕР ШРИФТА В ТЕРМИНАЛЕ
	"workbench.activityBar.location": "top", //ПЕРЕНОСИТ АКТИВИТИБАР НАВЕРХ
	"terminal.integrated.cursorStyle": "line", // СТИЛЬ КУРСОРА В ТЕРМИНАЛЕ
	"terminal.integrated.cursorStyleInactive": "line", // СТИЛЬ КУРСОРА В ТЕРМИНАЛЕ
	
	
}